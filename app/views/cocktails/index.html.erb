<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center">
      <h1>Cocktails</h1>
      <%= link_to "Create New Cocktail", new_cocktail_path %>
    </div>
  </div>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-3">
        <h2><%= cocktail.name %></h2>
        <%= link_to "", cocktail_path(cocktail) %>
        <p><%= link_to "Mix It Up", cocktail_path(cocktail) %> |
        <%= link_to "Edit Cocktail", edit_cocktail_path(cocktail) %> |
        <%= link_to "Delete", cocktail_path(cocktail), method: :delete %></p>
      </div>
    <% end %>
  </div>
</div>
